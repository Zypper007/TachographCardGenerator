<Window x:Class="Generator_pliku_ddd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Generator_pliku_ddd"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="generateBtn" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Width="140" Height="50" Click="generateBtn_Click">Generuj</Button>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <TextBox Width="100" VerticalAlignment="Center" FontSize="20" TextAlignment="Right">200</TextBox>
                <TextBlock VerticalAlignment="Center" FontSize="20" Margin="20,0,0,0">kopi</TextBlock>
            </StackPanel>
        </Grid>
        <Grid DockPanel.Dock="Left">
        </Grid>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" ></StackPanel>     
    </DockPanel>
</Window>
